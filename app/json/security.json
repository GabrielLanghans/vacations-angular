{
  "rules": {
    "users": {
      "$user": {
        ".read": "$user == auth.uid",
        ".write": "!data.exists() || $user == auth.uid",
        ".validate": "newData.hasChildren(['uid', 'name', 'travels'])",

        "uid": {
          ".validate": "newData.isString()"
        },

        "name": {
          ".validate": "newData.isString()"
        },

        "travels": {
          "$travels": {
            ".validate": "newData.hasChildren(['id', 'date', 'places'])",
            
            "places": {
              "$places": {
                ".validate": "newData.hasChildren(['id', 'position', 'name', 'address', 'url'])",
                
                "id": {
                  ".validate": "newData.isString() && newData.val() !== ''"
                },
                
                "position": {
                  ".validate": "newData.isString() && newData.val() !== ''"
                },
                
                "name": {
                  ".validate": "newData.isString() && newData.val() !== ''"
                },
                
                "address": {
                  ".validate": "newData.isString() && newData.val() !== ''"
                },
                
                "url": {
                  ".validate": "newData.isString()"
                }
              }
            }
          }
        }
      }
    }
  }
}